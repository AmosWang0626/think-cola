<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amos.think.gateway.impl.database.mapper.UserMapper">

    <resultMap type="com.amos.think.gateway.impl.database.UserDO" id="userDOMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="name" column="name"/>
        <result property="phoneNo" column="phone_no"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="description" column="description"/>
    </resultMap>

    <sql id="FROM_TABLE">from org_user</sql>

    <select id="listByName" resultMap="userDOMap">
        select
        id, username, name, phone_no, gender, birthday, description
        <include refid="FROM_TABLE"/>
        <where>
            <if test="name != null">
                name like CONCAT('%', #{name}, '%')
            </if>
            and delete_flag = 0
        </where>
    </select>

    <select id="existUsername" resultType="java.lang.Boolean">
        select count(*)
        <include refid="FROM_TABLE"/>
        <where>
            username = #{username}
            <if test="userId != null">
                and id &lt;&gt; #{userId}
            </if>
            and delete_flag = 0
        </where>
    </select>

    <select id="findByUserName" resultType="com.amos.think.gateway.impl.database.UserDO">
        select *
        <include refid="FROM_TABLE"/>
        where username = #{username}
        and delete_flag = 0
    </select>

</mapper>
